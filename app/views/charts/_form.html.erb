


<div class="artist">
  <h1><%= @chart.id ? 'Edit chart' : 'Create Chart' %></h1>

  <%= form_for @chart do |f| %>
  <div class="field">
    <% f.label :name %>
    <%= f.text_field :name, required: true, autofocus:true %>
  </div>
    <br />
  <div class="actions">
    <%= f.submit 'Disco', class: 'ui primary basic button ' %>
  </div>
  <% end %>
</div>
